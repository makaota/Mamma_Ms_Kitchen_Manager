        <activity
            android:name=".ui.activities.ProductDetailsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".ui.activities.MyOrderDetailsActivity"
            android:exported="false"
